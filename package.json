{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "jest --passWithNoTests --detectOpenHandles --watch",
    "coverage": "jest --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@umijs/preset-react": "1.x",
    "ahooks": "^2.10.9",
    "immer": "^9.0.6",
    "jotai": "^1.3.4",
    "lodash-es": "^4.17.21",
    "swr": "^1.0.1",
    "umi": "^3.5.18"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.1",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "jest": "^27.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "react": "17.x",
    "react-dom": "17.x",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "yorkie": "^2.0.0"
  }
}
